pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Run') {
            steps {
                script {
                    docker.image('my-java-app').inside {
                        sh 'java HelloWorld'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Java application executed successfully.'
        }
        failure {
            echo 'Build or execution failed.'
        }
    }
}
